<div class="row-fluid">
  <div class="span6">
    Lieu : <%= @survey.locality %><br/>
    Hash : <%= @survey.hash_url %><br/>
    Miam time : <%= @survey.when_date %><br/>
    Fin des votes : <%= @survey.end_votes %> Ã  <%= @survey.end_text %><br/>
    <br/>
    <ul class="showOptions">
    <% @survey.options.each do |option| %>
    	<li class="horizontal">
        <div>
          <%= option.locality %> (<%= option.votes.length %>)
          <% if !@already_voted %>
            <div class="vote">
              <%= link_to "voter!", create_vote_path(:option => option.id, :hash_url => @survey.hash_url), :class => "btn btn-success" %>
              </div>
          <% end %>
        </div>
      </li>

    <% end %>
    </ul>
  </div>
</div>
<script type="text/javascript">
  $('#editSurvey').show().empty();
  $('#editSurvey').append('<%= link_to "Editer", edit_survey_path(@survey.id) %>');
</script>
